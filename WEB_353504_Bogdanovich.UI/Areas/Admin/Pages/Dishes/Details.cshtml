@page "{id:int}"
@model DetailsModel
@{
    ViewData["Title"] = "Детали блюда";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.Dish.Image))
        {
            <img src="@Model.Dish.Image" alt="@Model.Dish.Name" class="img-fluid mb-3" style="max-height: 300px;" />
        }
        else
        {
            <p class="text-muted">Изображение отсутствует</p>
        }

        <h4>@Html.DisplayFor(model => model.Dish.Name)</h4>
        <p><strong>Описание:</strong> @Html.DisplayFor(model => model.Dish.Description)</p>
        <p><strong>Калории:</strong> @Html.DisplayFor(model => model.Dish.Calories)</p>
        <p><strong>Категория:</strong> @Model.Dish.Category?.Name</p>
    </div>
    <div class="card-footer">
        <a asp-page="./Edit" asp-route-id="@Model.Dish.Id" class="btn btn-primary">Редактировать</a>
        <a asp-page="./Index" class="btn btn-secondary">Назад к списку</a>
    </div>
</div>