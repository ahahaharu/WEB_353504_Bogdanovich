@model WEB_353504_Bogdanovich.UI.Models.RegisterUserViewModel

@{
    // Установка заголовка страницы
    ViewData["Title"] = "Регистрация нового пользователя";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center mb-4">@ViewData["Title"]</h1>

        <div class="card shadow-lg">
            <div class="card-body p-4">

                <!--
                    ОБЯЗАТЕЛЬНО: Форма должна иметь атрибут enctype="multipart/form-data"
                    для корректной отправки файла (IFormFile Avatar) на сервер.
                -->
                <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data">

                    <!-- Общий контейнер для ошибок валидации модели -->
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <!-- Поле Email -->
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="example@domain.com" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Поле Пароль -->
                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <!-- Поле Подтверждение пароля -->
                    <div class="mb-3">
                        <label asp-for="PasswordConfirm" class="form-label"></label>
                        <input asp-for="PasswordConfirm" class="form-control" />
                        <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
                    </div>

                    <!--
                        Поле для загрузки файла (Avatar).
                        Это input type="file", привязанный к свойству IFormFile в модели.
                    -->
                    <div class="mb-4">
                        <label asp-for="Avatar" class="form-label">Аватар (необязательно)</label>
                        <input asp-for="Avatar" type="file" class="form-control" />
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>

                    <!-- Кнопка регистрации -->
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">Зарегистрироваться</button>
                    </div>
                </form>

            </div>
        </div>

        <div class="text-center mt-3">
            <!-- Ссылка для перехода на страницу входа -->
            <a asp-controller="Account" asp-action="Login">Уже есть аккаунт? Войти</a>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Включение скриптов для валидации на стороне клиента -->
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}